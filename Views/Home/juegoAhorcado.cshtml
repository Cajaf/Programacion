 

 <h1>
 @for (int i = 0; i < ViewBag.Largo;i++)
 {

    if(ViewBag.letrasEncontradas[i])
    {
        @Html.Raw(ViewBag.palabra[i]);
    }
    else
    {
      @Html.Raw("_");
    }
    @Html.Raw(" ")
 }
 </h1>

